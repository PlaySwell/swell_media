

.container
	.row
		.col-xs-10
			%ul.breadcrumb
				%li
					= link_to 'Admin', admin_index_path
				%li
					= link_to 'Blog Admin', admin_articles_path
				%li
					%strong
						Edit
						= @article.title
		.col-xs-2
			%a.btn.btn-primary{ href: preview_article_path( @article.id ), target: '_new' }
				%i.fa.fa-eye
				Preview
	
	= form_for @article do |f|
	
		.row
			.col-xs-8
				.form-group
					= f.text_field :title, class: 'form-control'

				.form-group
					.input-group
						= f.label :slug_pref, 'URL for this article:'
						%span.input-group-addon
							= ENV['APP_DOMAIN']
						= f.text_field :slug_pref, class: 'form-control', placeholder: @article.slug

				.form-group
					.input-group
					= f.label :avatar, 'Thumbnail:'
					.row
						.col-sm-2
							= image_tag @article.avatar, class: 'img-responsive'
						.col-sm-10
							= f.text_field :avatar, class: 'form-control', placeholder: 'Full Path to Image'


				.form-group
					= f.label :description, 'Summary'
					= f.text_area :description, class: 'form-control editor-small', rows: 4

				.form-group
					= f.text_area :content, class: 'form-control editor-full', rows: 12


			.col-xs-4
				.well
					-#.form-group
						= f.label :user_id, 'Author'
						= f.collection_select :user_id, User.where( "role > 1" ), :id, :name, {}, class: 'form-control'
					.form-group
						= f.label :publish_at
						= f.text_field :publish_at, value: @article.publish_at.to_s( :full_time ), class: 'form-control datepicker'
					.form-group
						= f.label :category_id
						= f.collection_select :category_id, SwellMedia::Category.active.order( :name ), :id, :name, { include_blank: '-- None -- ' }, class: 'form-control'
					.form-group
						= f.text_field :category_name, class: 'form-control', placeholder: 'Add Category'
					.form-group
						= f.label :status
						= f.collection_select :status, SwellMedia::Article.statuses, :first, :first, {}, class: 'form-control'
					.form-group
						= f.label :availability
						= f.collection_select :availability, SwellMedia::Article.availabilities, :first, :first, {}, class: 'form-control'
					.form-group
						= f.label :tag_list, 'Tags:'
						= f.text_field :tag_list, placeholder: 'Separate tags with commas', class: 'form-control'
					.form-group
						= f.check_box :is_commentable, {}, 'true', 'false'
						Allow Comments?
					.form-group
						= f.submit 'Update', class: 'btn btn-primary'