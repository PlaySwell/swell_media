

.container
	.row
		.col-xs-10
			%ul.breadcrumb
				%li
					= link_to 'Admin', admin_index_path
				%li
					= link_to 'Contact Admin', admin_contacts_path
				%li
					%strong
						= @contact.contact_type || 'contact'
						From
						= @contact.email
		.col-xs-2
			.pull-right
				= link_to 'Delete', @contact, method: :delete, confirm: 'Are You Sure', class: 'btn btn-danger'
				
	= form_for @contact do |f|
		.row
			.col-xs-8
				%fieldset{ disabled: true }
					.form-group
						= f.text_field :email, class: 'form-control disabled'

					.form-group
						.input-group
							= f.label :subject
							= f.text_field :subject, class: 'form-control disabled'

					.form-group
						= f.label :message
						= f.text_area :message, class: 'form-control disabled', rows: 4
